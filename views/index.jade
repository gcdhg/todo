extends layout

mixin tasker(task)
  div.card(id="ToDo#{task.id}")
    h5.card-header= task.title    
    div.card-body
      h5.card-title #{task.des}
      p.card-text Creation time: #{task.timeOfCreation}
      if(task.completed)
        p.card-text Complition time: #{task.timeOfComplition}
      form(action="/", method="POST")
        input(type="hidden" value="#{task.id}" name="id")
        input(type="submit", class="btn btn-success" value="Complete")      

block content
  div.container
    h1= title
    for task in todos
      +tasker(task)
      